<launch>
  <!-- Joystick node -->
  <node respawn="true" pkg="joy" type="joy_node" name="joystick" >
  <param name="dev" type="string" value="/dev/input/js0" />
  <param name="deadzone" value="0.10" />
  <param name="autorepeat_rate" value="0.5" />
  </node>

  <!-- Axes -->
  <!-- param name="axis_linear" type="int" value="1" -->

  <!-- Teleop node -->
  <node pkg="csir_powerbot_teleop" type="csir_powerbot_teleop" name="teleop" output="screen" />

</launch>
